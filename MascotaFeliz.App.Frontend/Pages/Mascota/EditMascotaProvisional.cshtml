@page
@model MascotaFeliz.App.Frontend.Pages.EditMascotaProvisionalModel
@{
}
<h2>Datos del Mascota: @Model.Mascota.Nombre @Model.Mascota.TipoMascota</h2>
<form method="POST">
    <input type="hidden" asp-for="Mascota.Id"/>
    <div class="form-group">
        <label asp-for="Mascota.Nombre"></label>
        <input asp-for="Mascota.Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="Mascota.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mascota.TipoMascota"></label>
        <input asp-for="Mascota.TipoMascota" class="form-control">
        <span class="text-danger" asp-validation-for="Mascota.TipoMascota"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mascota.Raza"></label>
        <input asp-for="Mascota.Raza" class="form-control">
        <span class="text-danger" asp-validation-for="Mascota.Raza"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mascota.Genero"></label>
        <input asp-for="Mascota.Genero" class="form-control">
        <span class="text-danger" asp-validation-for="Mascota.Genero"></span>
    </div>
    <button type="submit" class="btn btn-primary">Grabar</button>
</form>
<a asp-page="./ListMascotasProvisional" class="btn-default">Lista de Mascotas</a>
