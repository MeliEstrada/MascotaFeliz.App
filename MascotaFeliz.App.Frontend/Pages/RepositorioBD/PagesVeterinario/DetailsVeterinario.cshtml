@page
@model MascotaFeliz.App.Frontend.Pages.DetailsVeterinarioModel
@{
}
<h2>@Model.Veterinario.Nombre @Model.Veterinario.Apellidos</h2>
<form method="post">
    <input type="hidden" asp-for="Veterinario.Id"/>
    <div class="form-group">
        Nombre: @Model.Veterinario.Nombre
    </div>
    <div class="form-group">
        Apellido(s): @Model.Veterinario.Apellidos
    </div>
    <div class="form-group">
        Tarjeta Profesional: @Model.Veterinario.TarjetaProfesional
    </div>
    <div class="form-group">
        Número de Teléfono: @Model.Veterinario.NumeroTelefono
    </div>
    <div class="form-group">
        Correo Electrónico: @Model.Veterinario.CorreoElectronico
    </div>
    <button
        type="submit"
        class="btn btn-primary">
        Eliminar Veterinario &nbsp; &nbsp;
        <i class="fas fa-trash fa-lg"></i>
    </button>
</form>
<a asp-page="./ListVeterinarios" class="btn-default">Lista de Veterinarios</a>
